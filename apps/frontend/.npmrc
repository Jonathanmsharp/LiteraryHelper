# Frontend .npmrc - Configuration for Vercel deployment

# Ensure workspace packages are correctly resolved
link-workspace-packages=true
workspace-concurrency=4

# Improve Vercel compatibility with proper node module resolution
node-linker=hoisted
shamefully-hoist=true

# Optimize dependency resolution
public-hoist-pattern[]=*next*
public-hoist-pattern[]=*react*
public-hoist-pattern[]=*react-dom*
public-hoist-pattern[]=@clerk/*
public-hoist-pattern[]=*eslint*
public-hoist-pattern[]=*typescript*
public-hoist-pattern[]=slate*
public-hoist-pattern[]=zustand

# Vercel-specific settings
save-workspace-protocol=false
save-prefix=''
prefer-offline=true
strict-peer-dependencies=false

# Disable update notifications during CI/CD
update-notifier=false

# Enable legacy peer deps to resolve potential conflicts
legacy-peer-deps=true

# Allow pnpm to read from the workspace root
workspace-root=../..
